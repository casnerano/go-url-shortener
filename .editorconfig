root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,conf,go}]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
max_line_length = 80

[COMMIT_EDITMSG]
max_line_length = 0

[Makefile]
indent_style = tab
